<div id="<%= dom_id team %>">
  <p>
    <% url = team.avatar_url.to_s.strip %>
    <% if url.present? && (url.start_with?('http://', 'https://', '/') || url.start_with?('data:image')) %>
      <%= image_tag url, alt: team.name, class: 'avatar-image' %>
    <% else %>
      <% initial = team.name.to_s.first&.upcase || '?' %>
      <span class="avatar-circle" aria-label="avatar"><%= initial %></span>
    <% end %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= team.name %>
  </p>

  <p>
    <strong>University:</strong>
    <%= team.university %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= team.description %>
  </p>

  <p>
    <strong>Website:</strong>
    <%= team.website %>
  </p>

  <p>
    <strong>Captain:</strong>
    <% if team.captain.present? %>
      <%= link_to(team.captain.display_name, team.captain) %>
    <% else %>
      &mdash;
    <% end %>
  </p>

</div>
