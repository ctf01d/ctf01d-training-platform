<% content_for :title, "Команды" %>

<h1>Команды</h1>

<div class="list" id="teams">
  <% @teams.each do |team| %>
    <div class="card">
      <div class="row">
        <% url = team.avatar_url.to_s.strip %>
        <% if url.present? && (url.start_with?('http://', 'https://', '/') || url.start_with?('data:image')) %>
          <%= image_tag url, alt: team.name, class: 'avatar-image' %>
        <% else %>
          <% initial = team.name.to_s.first&.upcase || '?' %>
          <span class="avatar-circle" aria-label="avatar"><%= initial %></span>
        <% end %>
        <div>
          <div><strong><%= link_to team.name, team %></strong></div>
          <div class="muted">
            Университет: <%= team.university ? link_to(team.university.name, team.university) : '—' %>
            <% if team.captain %> • Капитан: <%= link_to team.captain.display_name, team.captain %><% end %>
            • Участников: <%= team.team_memberships.where(status: 'approved').count %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to "Создать команду", new_team_path %>
<% end %>
