<%= form_with(model: team) do |form| %>
  <% if team.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
        <% team.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :university_id, 'University', style: "display: block" %>
    <%= form.collection_select :university_id, University.order(:name), :id, :name, include_blank: true %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :website, style: "display: block" %>
    <%= form.text_field :website %>
  </div>

  <div>
    <%= form.label :avatar_url, style: "display: block" %>
    <%= form.text_field :avatar_url %>
  </div>

  <% if team.persisted? %>
    <div>
      <%= form.label :captain_id, 'Captain', style: "display: block" %>
      <% members = team.team_memberships.includes(:user).where(status: 'approved').map(&:user) %>
      <%= form.collection_select :captain_id, members, :id, :display_name, include_blank: true %>
    </div>
  <% else %>
    <p style="color:#666;">Капитаном будет назначен создатель команды.</p>
  <% end %>

  <div>
    <%= form.submit %>
  </div>
<% end %>
