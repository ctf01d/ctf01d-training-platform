<% content_for :title, "Universities" %>

<h1>Universities</h1>

<div id="universities">
  <% @universities.each do |university| %>
    <%= render university %>
    <p>
      <%= link_to "Show this university", university %>
    </p>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to "New university", new_university_path %>
<% end %>
