<div id="<%= dom_id university %>">
  <div class="row">
    <% url = university.avatar_url.to_s.strip %>
    <% if url.present? && (url.start_with?('http://', 'https://', '/') || url.start_with?('data:image')) %>
      <%= image_tag url, alt: university.name, class: 'avatar-image' %>
    <% else %>
      <% initial = university.name.to_s.first&.upcase || '?' %>
      <span class="avatar-circle" aria-label="avatar"><%= initial %></span>
    <% end %>
    <div>
      <p><strong><%= university.name %></strong></p>
      <% if university.site_url.present? %>
        <p class="muted"><%= link_to university.site_url, university.site_url, target: '_blank', rel: 'noopener' %></p>
      <% end %>
    </div>
  </div>
</div>
