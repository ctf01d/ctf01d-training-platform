<%= form_with(model: result) do |form| %>
  <% if result.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
        <% result.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :game_id, 'Game', style: "display: block" %>
    <%= form.collection_select :game_id, Game.order(starts_at: :desc, created_at: :desc), :id, :name, include_blank: false %>
  </div>

  <div>
    <%= form.label :team_id, 'Team', style: "display: block" %>
    <%= form.collection_select :team_id, (@available_teams || Team.order(:name)), :id, :name, include_blank: false %>
  </div>

  <div>
    <%= form.label :score, style: "display: block" %>
    <%= form.number_field :score %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
