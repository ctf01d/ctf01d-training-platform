<% content_for :title, "Членства в командах" %>

<h1>Членства в командах</h1>

<div class="list" id="team_memberships">
  <% @team_memberships.includes(:team, :user).each do |tm| %>
    <div class="card">
      <div class="row">
        <% # Аватар пользователя слева %>
        <%= avatar_image_tag(tm.user&.display_name || tm.user&.user_name, url: tm.user&.avatar_url) %>
        <div>
          <div>
            <strong><%= link_to (tm.user&.display_name || '—'), tm.user %></strong>
            <span class="muted">в</span>
            <strong><%= link_to (tm.team&.name || '—'), tm.team %></strong>
          </div>
          <div class="muted">Роль: <%= tm.role %> • Статус: <%= tm.status %></div>
          <div style="margin-top:6px;">
            <%= link_to 'Открыть', tm %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to "Создать членство", new_team_membership_path %>
<% end %>
