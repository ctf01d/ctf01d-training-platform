<% content_for :title, "Users" %>

<h1>Users</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to "New user", new_user_path %>
<% end %>
