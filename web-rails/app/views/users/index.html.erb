<% content_for :title, "Пользователи" %>

<h1>Пользователи</h1>

<div class="list" id="users">
  <% @users.each do |user| %>
    <div class="card">
      <div class="row">
        <% url = user.avatar_url.to_s.strip %>
        <% if url.present? && (url.start_with?('http://', 'https://', '/') || url.start_with?('data:image')) %>
          <%= image_tag url, alt: user.display_name, class: 'avatar-image' %>
        <% else %>
          <% initial = user.user_name.to_s.first&.upcase || '?' %>
          <span class="avatar-circle" aria-label="avatar"><%= initial %></span>
        <% end %>
        <div>
          <div><strong><%= link_to user.display_name, user %></strong> <span class="muted">@<%= user.user_name %></span></div>
          <div class="muted">Роль: <%= user.role %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if user_signed_in? && current_user.role == 'admin' %>
  <%= link_to "Создать пользователя", new_user_path %>
<% end %>
