<%= render @service %>

<div style="margin-top:8px;">
  <% if user_signed_in? && current_user.role == 'admin' %>
    <%= link_to "Edit this service", edit_service_path(@service) %> |
    <%= link_to "Back to services", services_path %> |
    <%= button_to "Destroy this service", @service, method: :delete, form: { style: 'display:inline' } %>
  <% else %>
    <%= link_to "Back to services", services_path %>
  <% end %>
  
</div>
