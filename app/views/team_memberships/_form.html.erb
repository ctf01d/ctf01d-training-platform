<div class="card">
  <%= form_with(model: team_membership, html: { class: 'form' }) do |form| %>
    <% if team_membership.errors.any? %>
      <div class="form-errors">
        <strong><%= pluralize(team_membership.errors.count, "ошибка") %></strong>
        <ul>
          <% team_membership.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :team_id %>
      <%= form.collection_select :team_id, Team.order(:name), :id, :name, include_blank: false %>
    </div>

    <div class="form-group">
      <%= form.label :user_id %>
      <%= form.collection_select :user_id, User.order(:display_name), :id, :display_name, include_blank: false %>
    </div>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, options_for_select(TeamMembership::ROLES, form.object.role) %>
    </div>

    <div class="form-group">
      <%= form.label :status %>
      <%= form.select :status, options_for_select(TeamMembership::STATUSES, form.object.status) %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Сохранить', class: 'btn primary' %>
    </div>
  <% end %>
</div>
