<% content_for :title, "Пользователи" %>

<h1>Пользователи</h1>

<div class="toolbar" style="display:flex; align-items:center; gap:16px; margin: 8px 0 12px 0;">
  <div style="flex:1;">
    <div class="search-box">
      <span class="search-icon" aria-hidden="true"></span>
      <%= text_field_tag :users_search, '', id: 'users-search', class: 'js-search-input', placeholder: 'Поиск: имя или логин', data: { target: '#users' } %>
    </div>
  </div>
  <% if user_signed_in? && current_user.role == 'admin' %>
    <div style="flex:0;">
      <%= link_to "Создать пользователя", new_user_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="list" id="users">
  <% @users.each do |user| %>
    <div class="card js-search-item" data-search="<%= [user.display_name, user.user_name, user.role].compact.join(' ').downcase %>">
      <div class="row">
        <%= avatar_image_tag(user.display_name.presence || user.user_name, url: user.avatar_url) %>
        <div>
          <div><strong><%= link_to user.display_name, user %></strong> <span class="muted">@<%= user.user_name %></span></div>
          <div class="muted">Роль: <%= user.role %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
