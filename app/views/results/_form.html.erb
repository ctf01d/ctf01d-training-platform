<div class="card">
  <%= form_with(model: result, html: { class: 'form' }) do |form| %>
    <% if result.errors.any? %>
      <div class="form-errors">
        <strong><%= pluralize(result.errors.count, "ошибка") %></strong>
        <ul>
          <% result.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :game_id, 'Game' %>
      <%= form.collection_select :game_id, Game.order(starts_at: :desc, created_at: :desc), :id, :name, include_blank: false %>
    </div>

    <div class="form-group">
      <%= form.label :team_id, 'Team' %>
      <%= form.collection_select :team_id, (@available_teams || Team.order(:name)), :id, :name, include_blank: false %>
    </div>

    <div class="form-group">
      <%= form.label :score %>
      <%= form.number_field :score %>
    </div>

    <div class="form-actions">
      <%= form.submit 'Сохранить', class: 'btn primary' %>
    </div>
  <% end %>
</div>
