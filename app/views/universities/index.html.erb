<% content_for :title, "Университеты" %>

<h1>Университеты</h1>

<% if user_signed_in? && current_user.role == 'admin' %>
  <div style="margin: 8px 0 12px 0;">
    <%= link_to "Создать университет", new_university_path, class: 'btn primary' %>
  </div>
<% end %>

<div class="card" style="margin: 8px 0 12px 0;">
  <label for="universities-search"><strong>Поиск</strong></label>
  <%= text_field_tag :universities_search, '', id: 'universities-search', class: 'js-search-input', placeholder: 'Название или сайт', data: { target: '#universities' } %>
</div>

<div class="list" id="universities">
  <% @universities.each do |university| %>
    <div class="card js-search-item" data-search="<%= [university.name, university.site_url].compact.join(' ').downcase %>">
      <div class="row">
        <%= avatar_image_tag(university.name, url: university.avatar_url) %>
        <div>
          <div><strong><%= link_to university.name, university %></strong></div>
          <% if university.site_url.present? %>
            <div class="muted"><%= link_to university.site_url, university.site_url, target: '_blank', rel: 'noopener' %></div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
