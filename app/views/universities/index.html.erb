<% content_for :title, "Университеты" %>

<h1>Университеты</h1>

<div class="toolbar" style="display:flex; align-items:center; gap:16px; margin: 8px 0 12px 0;">
  <div style="flex:1;">
    <div class="search-box">
      <span class="search-icon" aria-hidden="true"></span>
      <%= text_field_tag :universities_search, '', id: 'universities-search', class: 'js-search-input', placeholder: 'Поиск: название или сайт', data: { target: '#universities' } %>
    </div>
  </div>
  <% if user_signed_in? && current_user.role == 'admin' %>
    <div style="flex:0;">
      <%= link_to "Создать университет", new_university_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>

<div class="list" id="universities">
  <% @universities.each do |university| %>
    <div class="card js-search-item" data-search="<%= [university.name, university.site_url].compact.join(' ').downcase %>">
      <div class="row">
        <%= avatar_image_tag(university.name, url: university.avatar_url) %>
        <div>
          <div><strong><%= link_to university.name, university %></strong></div>
          <% if university.site_url.present? %>
            <div class="muted"><%= link_to university.site_url, university.site_url, target: '_blank', rel: 'noopener' %></div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
