<div class="card" style="margin: 8px 0 16px;">
  <%= render @university %>
</div>

<div>
  <% if user_signed_in? && current_user.role == 'admin' %>
    <%= link_to "Редактировать", edit_university_path(@university), class: 'btn' %> |
  <% end %>
  <%= link_to "Назад к университетам", universities_path, class: 'btn' %>
  <% if user_signed_in? && current_user.role == 'admin' %>
    | <%= button_to "Destroy this university", @university, method: :delete, form: { style: 'display:inline' }, class: 'btn danger' %>
  <% end %>
</div>

<hr>
<h2>Команды</h2>
<% teams = @university.teams.order(:name) %>
<% if teams.any? %>
  <ul>
    <% teams.each do |t| %>
      <li><%= link_to t.name, t %></li>
    <% end %>
  </ul>
<% else %>
  <p>Пока нет команд.</p>
<% end %>
