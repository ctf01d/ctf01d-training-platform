<% content_for :title, "Команды" %>

<h1>Команды</h1>

<% if user_signed_in? && current_user.role == 'admin' %>
  <div style="margin: 8px 0 12px 0;">
    <%= link_to "Создать команду", new_team_path, class: 'btn primary' %>
  </div>
<% end %>

<div class="card" style="margin: 8px 0 12px 0;">
  <label for="teams-search"><strong>Поиск</strong></label>
  <%= text_field_tag :teams_search, '', id: 'teams-search', class: 'js-search-input', placeholder: 'Название, вуз, капитан', data: { target: '#teams' } %>
</div>

<div class="list" id="teams">
  <% @teams.each do |team| %>
    <div class="card js-search-item" data-search="<%= [team.name, team.university&.name, team.captain&.display_name].compact.join(' ').downcase %>">
      <div class="row">
        <%= avatar_image_tag(team.name, url: team.avatar_url) %>
        <div>
          <div><strong><%= link_to team.name, team %></strong></div>
          <div class="muted">
            <%= team.university ? link_to(team.university.name, team.university) : '' %>
            <% if team.captain %> • Капитан: <%= link_to team.captain.display_name, team.captain %><% end %>
            • Участников: <%= team.team_memberships.where(status: TeamMembership::STATUS_APPROVED).count %>
            • Принял участие в соревнованиях: <%= team.results.count %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
