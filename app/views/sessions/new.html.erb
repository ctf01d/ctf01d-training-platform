<% content_for :title, 'Вход' %>

<div class="auth">
  <div class="card auth-card">
    <h1 class="auth-title">Вход</h1>
    <div class="muted auth-subtitle">Введите логин и пароль для входа.</div>

    <%= form_with url: session_path, method: :post, local: true, html: { class: 'form' } do |f| %>
      <div class="form-group">
        <%= label_tag :user_name, 'Логин' %>
        <%= text_field_tag :user_name, params[:user_name], autocomplete: 'username', autofocus: true, required: true %>
      </div>
      <div class="form-group">
        <%= label_tag :password, 'Пароль' %>
        <%= password_field_tag :password, nil, autocomplete: 'current-password', required: true %>
      </div>
      <div class="form-actions">
        <%= submit_tag 'Войти', class: 'btn primary' %>
      </div>
    <% end %>
  </div>
</div>
